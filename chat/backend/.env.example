# ---- Servidor -----------------------------------------------
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://infinisolutions.cloud

# ---- Banco de Dados (MySQL Hostinger) -----------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nucleofix_chat
DB_USER=seu_usuario_mysql
DB_PASSWORD=sua_senha_mysql

# ---- JWT ----------------------------------------------------
JWT_SECRET=TROQUE_POR_UMA_STRING_SECRETA_LONGA_E_ALEATORIA
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=TROQUE_POR_OUTRA_STRING_SECRETA_DIFERENTE
JWT_REFRESH_EXPIRES_IN=7d

# ---- WhatsApp Cloud API (Meta) ------------------------------
WHATSAPP_TOKEN=SEU_TOKEN_PERMANENTE_DA_META
WHATSAPP_PHONE_NUMBER_ID=SEU_PHONE_NUMBER_ID
WHATSAPP_VERIFY_TOKEN=nucleofix_verify_2025
WHATSAPP_API_VERSION=v20.0

# ---- Storage ------------------------------------------------
STORAGE_BASE_PATH=./storage
MAX_FILE_SIZE_MB=25
